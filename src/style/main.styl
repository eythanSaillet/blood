*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    overflow hidden
    background-color pink
    canvas
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index -5
    .sceneInterface
        position absolute
        top 0
        left 0
        width 100vw
        height 100vh
        display none
        align-items flex-end
        justify-content center
        z-index 5
        pointer-events none
        .buttonsContainer
            width 500px
            display flex
            align-items flex-end
            justify-content space-around
            margin-bottom 10vh
            div
                width 30px
                height 30px
                border solid white 1px
                opacity 0
                pointer-events auto
                cursor pointer
            .squareButton
                background white
            .circleButton
                border-radius 50%

    // .buttonContainer
    //     position absolute
    //     top 0
    //     left 0
    //     z-index 10
    .loaderOverlay
        position absolute
        top 0
        left 0
        width 100vw
        height 100vh
        display flex
        align-items center
        justify-content center
        z-index 30
        background-color black
        .loader
            display flex
            flex-direction column
            justify-content center
            align-items center
            .svgContainer
                position relative
                width 10vmin
                height 10vmin
                overflow hidden
                div
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                .drop
                    z-index 33
                    background-image url('../assets/images/drop.svg')
                    transform translateY(1px)
                .dropBgRed
                    z-index 32
                    background-image url('../assets/images/dropBgRed.svg')
                    transform translateY(100%)
                .dropBgGrey
                    z-index 31
                    background-image url('../assets/images/dropBgGrey.svg')
            .startInstruction
                color white
                text-align center
                margin 10px
                padding 5px
                opacity 0
                font-family 'Roboto', sans-serif
                font-size 10px
                letter-spacing 3px
                pointer-events none
    .menuOverlay
        width 100vw
        height 100vh
        display flex
        align-items center
        justify-content center
        flex-direction column
        z-index 20
        pointer-events none
        .title
            font-family: 'Arkhip'
            font-size 10vw
            user-select none
            .red
                color red
            .white
                color white
        .startButton
            height 40px
            width 160px
            display flex
            justify-content center
            align-items center
            border white solid 1px
            margin-top 5vh
            cursor pointer
            transition background 0.3s ease-in-out
            pointer-events auto
            &:hover
                background rgba(255, 255, 255, 0.1)
                span
                    letter-spacing 8px
            span
                color white
                font-family: 'Roboto', sans-serif;
                font-size 10px
                letter-spacing 5px
                transition letter-spacing 0.3s ease-in-out

@font-face
    font-family 'Arkhip'
    src url('../assets/fonts/arkhip.ttf')

