*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    overflow hidden
    background-color pink
    canvas
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index 5
    .buttonContainer
        position absolute
        top 0
        left 0
        z-index 10
    .loaderContainer
        width 100vw
        height 100vh
        display flex
        align-items center
        justify-content center
        z-index 30
        background-color #fff
        .svgContainer
            position relative
            width 10vmin
            height 10vmin
            overflow hidden
            background #ffffff
            img
                position absolute
                top 0
                left 0
                width 10vmin
                height 10vmin
            .drop
                z-index 32
            .dropBg
                z-index 31
                transform translateY(100%)

